{
    "name": "whatsapp-hard-api-nodejs",
    "version": "1.0",
    "description": "Whatsapp api rest multidevices baseada em baileys",
    "main": "server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "mocha tests/*.test.js --exit",
        "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write",
            "git add"
        ],
        "*.{html,css,less,ejs}": [
            "prettier --write",
            "git add"
        ]
    },
    "repository": "",
    "author": "Renato Freitas",
    "license": "MIT",
    "dependencies": {
        "@adiwajshing/keyed-db": "^0.2.4",
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "@whiskeysockets/baileys": "github:renatoiub/baileys",
        "axios": "^1.1.3",
        "baileys": "github:renatoiub/baileys",
        "connect-flash": "^0.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.7",
        "express": "^4.18.2",
        "express-exception-handler": "^1.3.23",
        "express-session": "^1.18.0",
        "jsonwebtoken": "^9.0.2",
        "link-preview-js": "^3.0.0",
        "multer": "^1.4.5-lts.1",
        "node-cache": "^5.1.2",
        "node-mime-types": "^1.1.0",
        "node-schedule": "^2.1.1",
        "pino": "^8.7.0",
        "qrcode": "^1.5.1",
        "sharp": "^0.32.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.0.4",
        "mocha": "^10.1.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.0",
        "supertest": "^6.3.1"
    }
}
